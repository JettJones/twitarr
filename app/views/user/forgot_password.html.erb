<%= form_tag(user_forgot_password_path, class: 'form-horizontal') do %>
  <legend>Forgot password</legend>
  <div class="form-group">
    <div class="col-sm-12" style="margin-bottom: 5px;">
      If you've forgotten your password, then please enter your username below to reset.
    </div>
  </div>
  <div class="form-group">
    <label class="control-label col-sm-2">Username</label>

    <div class="col-sm-5">
      <%= text_field_tag :username, params[:username], class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-5">
      <%= submit_tag 'Get security question', class: 'btn btn-primary' %>
      <h4><%= link_to 'Never mind, I remembered the password!', login_path %></h4>
    </div>
  </div>
<% end %>
