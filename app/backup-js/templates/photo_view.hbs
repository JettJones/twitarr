{{#modal-dialog action="close"}}
  <div class="modal-content">
    <div class="modal-body clearfix">
      <div class="photo-preview">
        <img {{bind-attr src=medium}}>
      </div>
      <div style="padding-top: 5px;">
        <span class="pull-left btn btn-danger btn-xs" {{action 'close'}}>close</span>
        <a class="pull-right btn btn-default btn-xs" {{action 'open_full'}} target="_blank">open full size</a>
      </div>
    </div>
  </div>
{{/modal-dialog}}