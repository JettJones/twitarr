{{#each post in controller.posts}}
  {{ render "entry/details" post }}
{{else}}
  {{#unless loading}}
    <div>
      No posts!
    </div>
  {{/unless}}
{{/each}}
{{#if showMore}}
  <div style="margin-top: 10px; width: 100%;" class="btn btn-primary btn-lg" {{action 'loadMore'}}>MORE</div>
{{/if}}
{{partial 'loading'}}
{{partial 'bottomMenu'}}
