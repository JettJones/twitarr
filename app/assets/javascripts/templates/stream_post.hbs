<div class="stream-post">
  <div class="content">
    <img {{bind-attr src=author_small_profile_pic}} class="profile-pic"/>

    <div>
      <span class="author">
        {{author}}
      </span>
      <span class="timestamp">
        <a href="#" {{action 'view'}}>{{pretty_timestamp}}</a>
      </span>
    </div>
    <div>
      <div class="text">
        {{{text}}}
      </div>
      <div>
        {{#if post.photo}}
          {{render 'photo_mini' photo }}
        {{/if}}
      </div>
    </div>
    <div class="clearfix">
      <div class="pull-right">
        {{likes_string}}
        {{#if logged_in}}
          <div class="pull-right">
            {{#if user_likes}}
              <a href="#" {{action 'unlike'}}>Unlike</a>
            {{else}}
              <a href="#" {{action 'like'}}>Like</a>
            {{/if}}
          </div>
        {{/if}}
      </div>
    </div>
  </div>
</div>