<div class='post-entry'>
  {{#linkTo "posts.user" username style="color: darkgray;"}}
    {{ username }}
    {{#if post_by_friend}}
      <span class="glyphicon glyphicon-bookmark" style="margin-left: 5px;"></span>
    {{/if}}
  {{/linkTo}}
  <div class="pull-right">
    <span style="color: darkgray;" {{bindAttr data-livestamp="post_time"}} ></span>
  </div>

  <div style="font-size: larger; font-weight: bold;">{{{ process_message }}}</div>

  <div class="post-details clearfix">
    {{#if liked_sentence}}
      <div class="pull-left">{{liked_sentence}}</div>
    {{/if}}
    {{#if logged_in}}
      <div class="clearfix">
        <div class="pull-right">
          {{#unless user_liked}}
            <button type="button" class="btn btn-primary btn-xs" {{ action 'favorite' post_id }}>
              <span class="glyphicon glyphicon-thumbs-up"></span>
              like
            </button>
          {{/unless}}
          {{#unless replying}}
            <div class="btn-group">
              <button type="button" class="btn btn-primary btn-xs" {{ action 'reply' username }}>
                <span class="glyphicon glyphicon-pencil"></span>
                reply
              </button>
              {{#if can_delete}}
                <button type="button" class="btn btn-primary dropdown-toggle btn-xs" data-toggle="dropdown">
                  <span class="caret"></span>
                </button>
                <ul class="dropdown-menu" role="menu">
                  <li><a href="#">reply</a></li>
                  <li class="divider"></li>
                  <li><a href="#" {{ action 'delete' post_id }}>delete</a></li>
                </ul>
              {{/if}}
            </div>
          {{/unless}}
        </div>
      </div>
    {{/if}}
  </div>
  {{#if replying}}
    <div class="post-reply clearfix">
      {{ partial 'posts/create' }}
      <button class="btn btn-primary pull-right margin-right-20 btn-xs" style="margin-top: 5px;" {{ action 'cancel_post' }}>Cancel</button>
    </div>
  {{/if}}
</div>
