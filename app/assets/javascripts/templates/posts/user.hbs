<div>
  {{#if logged_in}}
    <div class="pull-right">
      <a href="#" class="margin-right-20" {{ action 'message' user }}>
        <span class="glyphicon glyphicon-send"></span>
        Send Message
      </a>
      {{#if is_friend}}
        <a href="#" {{ action 'unfollow' }}>
          <span class="glyphicon glyphicon-eye-open"></span>
          Unfollow
        </a>
      {{else}}
        <a href="#" {{ action 'follow' }}>Follow</a>
      {{/if}}
    </div>
  {{/if}}
  <h3>@{{user}}</h3>
</div>
{{ partial 'posts/list' }}
