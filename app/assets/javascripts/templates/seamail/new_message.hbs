<div class="main-page-header">
  <h4>{{#link-to 'seamail.index'}}Seamails{{/link-to}} > {{#link-to 'seamail.detail' id}}{{subject}}{{/link-to}} > reply</h4>
</div>
{{textarea value=new_message rows='3' class='input'}}

<ul class="errors-list">
  {{#each error in errors}}
    <li>{{error}}</li>
  {{/each}}
</ul>
<button {{action 'new'}}>Send</button>
<button {{action 'cancel'}}>Cancel</button>
