<div class="main-page-header">
  <h4>{{#link-to 'seamail.index'}}Seamails{{/link-to}} > {{subject}}</h4>
  <span class="controls">
    {{#link-to "seamail.new_message" model}}Reply{{/link-to}}
    <a href="#" {{action 'reload'}}>Refresh</a>
  </span>
  <h5>
    {{users_display}}
  </h5>
</div>

<div class="display_card">
  {{#each message in messages}}
    <div class="card-section">
      <span class="title">
        {{message.author_display_name}}
      </span>
      <span class="timestamp">
        {{message.pretty_timestamp}}
      </span>

      <div class="body">
        <div class="body-section">
          {{message.text}}
        </div>
      </div>
    </div>
  {{/each}}
</div>
