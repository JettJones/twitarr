<div class="row">
  <div class="col-xs-2">
    <div style="">
      {{#link-to "posts.user" from}}{{ unbound from }}{{/link-to}}
    </div>
    to
    <ul class="to-users-list">
      {{#each person in to}}
        <li>
          {{#link-to "posts.user" person}}{{ unbound person }}{{/link-to}}
        </li>
      {{/each}}
    </ul>
  </div>
  <div class="col-xs-10">
    <div style="border-bottom: 1px solid darkgray;">
        <span class="pull-right" style="margin-left: 10px;">
          <span style="color: darkgray;" data-livestamp="{{unbound sent_time}}" ></span>
        </span>

      <div style="font-size: larger; font-weight: bold;">
        {{ unbound subject }}
      </div>
    </div>
    <div style="font-size: larger;">
      {{ view Twitarr.ParsedTextView contentBinding="text" }}
    </div>
  </div>
</div>
