<div class="main-page-header">
  <span class="controls">
    {{#link-to "forums.new_post" id}}Reply{{/link-to}}
    <button {{action 'reload'}}>Refresh</button>
  </span>

  <h4>{{subject}}</h4>
</div>

{{#each post in posts}}
  <div class="stream-post">
    <div>
      <span class="author">
        {{post.author}}
      </span>
      <span class="timestamp">
        {{post.pretty_timestamp}}
      </span>
    </div>
    <div class="text">
      {{post.text}}
    </div>
    <div class="photos" style="text-align: center;">
      {{#each photo in post.photos}}
        <img {{bind-attr src=photo.path}} {{action 'display_photo' photo.id}} style="margin: 0 auto 0.4em;"/>
      {{/each}}
    </div>
  </div>
{{/each}}
