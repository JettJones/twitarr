<div class="main-page-header header-with-controls">
  <span class="controls">
    {{#unless read_only}}
      <button class="btn" {{action 'create_forum'}}>Create Forum</button>
    {{/unless}}
    <button class="btn" {{action 'reload'}}>Refresh</button>
  </span>

  <div class="title">Forums</div>
</div>

<div class="display_card">
  {{#each forum in model}}
    {{render "forums.meta_partial" forum}}
  {{/each}}
</div>
