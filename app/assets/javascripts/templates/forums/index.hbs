<div class="main-page-header">
  <span class="controls">
    {{#link-to "forums.new"}}Create Forum{{/link-to}}
    <a href="#" {{action 'reload'}}>Refresh</a>
  </span>
  <h4>Forums</h4>
</div>

{{#each}}
  <div class="forum-meta">
    <div class="subject">
      {{#link-to 'forums.detail' id}}{{subject}}{{/link-to}}
      <span class="details">
        {{posts}} - {{pretty_timestamp}} ago
      </span>
    </div>
  </div>
{{/each}}
