<div class="main-page-header header-with-controls">
  <span class="controls">
    {{#if logged_in}}
      {{#link-to "forums.new"}}Create Forum{{/link-to}}
    {{/if}}
    <a href="#" {{action 'reload'}}>Refresh</a>
  </span>

  <div class="title">Forums</div>
</div>

<div class="display_card">
  {{#each forum in model}}
    {{render "forums.meta_partial" forum}}
  {{/each}}
</div>
