{{#modal-dialog action="close"}}
  <div class="modal-content">
    <div class="modal-body clearfix">
      <div>
        <img {{bind-attr src=medium}}>
      </div>
      <div class="pull-left" style="padding-top: 5px;">
        <span class="btn btn-danger btn-xs" {{action 'close'}}>close</span>
        <span class="btn btn-default btn-xs" {{bind-attr href=full}} target="_blank">open full size</span>
      </div>
    </div>
  </div>
{{/modal-dialog}}