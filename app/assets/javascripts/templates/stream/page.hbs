<span class="pull-right">
  <button {{action 'reload'}}>Refresh</button>
</span>
<h4>
  Seamonkey Stream o' Noise
</h4>
{{#each post in posts}}
  <div class="stream-post">
    <div>
      <span class="author">
        {{post.author}}
      </span>
      <span class="timestamp">
        {{post.timestamp}}
      </span>
    </div>
    <div class="text">
      {{post.text}}
    </div>
  </div>
{{/each}}

<div>
  {{textarea value=new_post rows="5"}}
</div>

{{#if has_next_page}}
  <div>
    <button {{action 'next_page'}}>Next</button>
  </div>
{{/if}}

<button {{action 'new'}}>Post</button>
