<div class='navbar navbar-default navbar-fixed-top' role="navigation">
  <div class="navbar-center">

    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <img src="/img/joco-coconut.png" style="height: 40px; margin-top: 5px; margin-left: 10px;" class="pull-left">
      <span class="navbar-brand">
        Twit-arr!
      </span>
      <span class="visible-xs pull-right" style="margin-right: 20px; margin-top: 8px;">
        {{#if display_new_email_link}}
          {{#linkTo "seamail.inbox" classNames="btn btn-default xs-new-mail"}}
            <span style="font-size: small;">
              New Seamail!
            </span>
          {{/linkTo}}
        {{/if}}
      </span>
    </div>

    <!--<div class='navbar-inner'>-->
    <div class="collapse navbar-collapse auto navbar-ex1-collapse">
      <ul class='nav navbar-nav'>
        {{#if logged_in}}
          <li>{{#linkTo "posts.feed"}}Feed{{/linkTo}}</li>
        {{/if}}
        <li>{{#linkTo "posts.popular"}}Popular{{/linkTo}}</li>
        <li>{{#linkTo "posts.all"}}All Posts{{/linkTo}}</li>
        {{#if logged_in}}
          <li>
            {{#linkTo "seamail.inbox"}}
              Seamail
              {{#if new_email}}
                <span class="badge" style="margin-left: 3px; background-color: orangered; vertical-align: top;">
                  {{email_count_display}}
                </span>
              {{/if}}
            {{/linkTo}}
          </li>
        {{/if}}
      </ul>
      <ul class='nav navbar-nav navbar-right'>
        {{#unless logged_in}}
          <li>{{#linkTo "login"}}Login{{/linkTo}}</li>
        {{else}}
          <li class='dropdown'>
            <a href='#' class='dropdown-toggle' data-toggle='dropdown'>
              <span>{{ login_user }}</span>
              <b class='caret'></b>
            </a>
            <ul class='dropdown-menu'>
              {{#if login_admin}}
                <li>{{#linkTo "users.index"}}Admin{{/linkTo}}</li>
              {{/if}}
              <li>{{#linkTo "profile"}}Profile{{/linkTo}}</li>
              <li><a tabindex='-1' href='#' {{ action 'logout' }}>Logout</a></li>
            </ul>
          </li>
        {{/unless}}
      </ul>
    </div>
  </div>
</div>