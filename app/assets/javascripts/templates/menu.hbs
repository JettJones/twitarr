<div class='navbar navbar-default navbar-fixed-top' role="navigation">
  <div class="navbar-center">

    <div class="navbar-header">
      <button type="button" {{bind-attr class=":navbar-toggle new_email_class" }} data-toggle="collapse" data-target=".navbar-ex1-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      {{#link-to "posts.all"}}
        <img src="/img/joco-coconut.png" style="height: 40px; margin-top: 5px; margin-left: 10px;" class="pull-left">
      <span class="navbar-brand">
        Twit-arr!
      </span>
      {{/link-to}}
    </div>

    <!--<div class='navbar-inner'>-->
    <div class="collapse navbar-collapse auto navbar-ex1-collapse">
      <ul class='nav navbar-nav'>
        <li>{{#link-to "posts.all"}}All Posts{{/link-to}}</li>
        <li>{{#link-to "posts.popular"}}Trending{{/link-to}}</li>
        {{#if logged_in}}
          <li>
            {{#link-to "seamail.inbox"}}
              Seamail
              {{#if new_email}}
                <span class="badge" style="margin-left: 3px; background-color: orangered; vertical-align: top;">
                  {{email_count_display}}
                </span>
              {{/if}}
            {{/link-to}}
          </li>
        {{/if}}
      </ul>
      <ul class='nav navbar-nav navbar-right'>
        <li><a href="/help" target="_blank">Help</a></li>
        {{#unless logged_in}}
          <li><a href="/login">Login</a></li>
        {{else}}
          <li class='dropdown'>
            <a href='#' class='dropdown-toggle' data-toggle='dropdown'>
              <span>{{ username_pretty }}</span>
              <b class='caret'></b>
            </a>
            <ul class='dropdown-menu'>
              {{#if login_admin}}
                <li>{{#link-to "users.index"}}Admin{{/link-to}}</li>
              {{/if}}
              <li>{{#link-to "user.profile"}}Profile{{/link-to}}</li>
              <li>{{#link-to "posts.user" login_user}}My Posts{{/link-to}}</li>
              <li class="divider"></li>
              <li>{{#link-to "user.change_password"}}Change Password{{/link-to}}</li>
              <li><a tabindex='-1' href='#' {{ action 'logout' }}>Logout</a></li>
            </ul>
          </li>
        {{/unless}}
      </ul>
    </div>
  </div>
</div>